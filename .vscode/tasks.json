{
    "version": "2.0.0",
    "tasks": [
        // m0 build //
        {
            "label": "m0 Build Client",
            "type": "shell",
            "command": "ant",
            "options": {
                "cwd": "${workspaceFolder}/m0/echoClient"
            },
            // "runOptions": {
            //     "runOn": "folderOpen"
            // },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "m0 Build Server",
            "type": "shell",
            "command": "ant",
            "options": {
                "cwd": "${workspaceFolder}/m0/echoServer"
            },
            // "runOptions": {
            //     "runOn": "folderOpen"
            // },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        // m0 build //        
        // m0 run //
        {
            "label": "m0 Run Client",
            "type": "shell",
            "command": "java -jar echoClient.jar",
            "options": {
                "cwd": "${workspaceFolder}/m0/echoClient"
            },
            "dependsOn": [
                "m0 Build Client",
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "m0 Run Server",
            "type": "shell",
            "command": "java -jar echoServer.jar 17000",
            "options": {
                "cwd": "${workspaceFolder}/m0/echoServer"
            },
            "dependsOn": [
                "m0 Build Server",
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
        // m0 run //
