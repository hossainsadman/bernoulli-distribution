/*
java -jar m2-client.jar
java -jar m2-ecs.jar
java -jar m2-server.jar
*/
{
    "version": "2.0.0",
    "tasks": [
        // m2 build //
        {
            "label": "m2 Build",
            "type": "shell",
            "command": "ant",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            // "runOptions": {
            //     "runOn": "folderOpen"
            // },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        // m2 build //
        // m2 clearn //
        {
            "label": "m2 Clean",
            "type": "shell",
            "command": "ant clean",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            // "runOptions": {
            //     "runOn": "folderOpen"
            // },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        // m2 clearn //
        // m2 run //
        {
            "label": "m2 Run Client",
            "type": "shell",
            "command": "java -jar m2-client.jar",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "m2 Build"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true, 
                "focus": true,
                "group": "m2",
                "panel": "dedicated"
            },
        },
        {
            "label": "m2 Run Server",
            "type": "shell",
            "command": "java -jar m2-server.jar",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "m2 Build"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true, 
                "focus": true,
                "group": "m2",
                "panel": "dedicated"
            },
        },
        {
            "label": "m2 Run ECS",
            "type": "shell",
            "command": "java -jar m2-ecs.jar",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "m2 Build"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true, 
                "focus": true,
                "group": "m2",
                "panel": "dedicated"
            },
        },
        // m2 run //
        // m2 utilities //
        {
            "label": "Clear Logs",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/logs/*",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        // m2 utilities //
        // m2 test //
        {
            "label": "m2 Test",
            "type": "shell",
            "command": "ant test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "m2 Build"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [],
        },
        // m2 test //
        // m2 testperf //
        {
            "label": "m2 Test",
            "type": "shell",
            "command": "ant testperf",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "m2 Build"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [],
        },
        // m2 testperf //

