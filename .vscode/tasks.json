        //     "group": {
        //         "kind": "test",
        //         "isDefault": false
        //     },
        //     "problemMatcher": [],
        // },
        // m2 test //
    ],
    "inputs": [
        {
          "id": "selectTest",
          "type": "pickString",
          "description": "Which test file to run?",
          "options": [
            "AllTests",
            "ConnectionTest",
            "InteractionTest",
            "KeyValueTest",
            "CacheTest",
          ]
        }
      ]
}